{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": [
    "tags"
  ],
  "properties": {
    "tags": {
      "$id": "#/properties/tags",
      "type": "array",
      "minItems": 3,
      "maxItems": 20,
      "title": "The tags Schema",
      "items": {
        "$id": "#/properties/tags/items",
        "type": "object",
        "title": "The Items Schema",
        "required": [
          "name","description"
        ],
        "properties": {
          "name": {
            "$id": "#/properties/tags/items/properties/name",
            "type": "string",
            "title": "The Name Schema",
            "default": "",
            "minLength": 4,
            "maxLength": 50,
            "faker":"custom.tags"
          },
          "description": {
            "type": "string",
            "chance": {
              "word":{
                "syllables": 3
              }
            }
          }
        }
      }
    }
  }
}
